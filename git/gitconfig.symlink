[include]
  path = ~/.gitconfig.local
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
[apply]
  whitespace = nowarn
[mergetool]
  keepBackup = false
[difftool]
  prompt = false
[help]
  autocorrect = 1
[push]
  default = current
[pull]
  rebase = true
[alias]
  force-push = push --force-with-lease origin
  switch = "!f() { git checkout $1 2>/dev/null || git checkout -b $1; }; f"
[rebase]
  autosquash = true
