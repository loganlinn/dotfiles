#!/bin/false
# vim: ft=zsh

autoload -Uz is-at-least

# edit + reload this file shellcheck
alias aliases="${=EDITOR} $(echo $0:A) && source $(echo $0:A)"
alias zshrc="${=EDITOR} ~/.zshrc && source ~/.zshrc"

# show me the path
alias path='echo $PATH | tr -s ":" "\n"'
alias fpath='echo $FPATH | tr -s ":" "\n"'
alias paths='which -a'

# allow aliases to be used with sudo
alias sudo='sudo ' 

alias nixre="darwin-rebuild switch"
alias nixgc="nix-collect-garbage -d"
alias nixq="nix-env -qaP"

################################################################################
# filesystem
################################################################################

alias l='ls -AFhl'
alias dud='du -d 1 -h'
alias duf='du -sh *'

if (( $+commands[lsd] )); then
  alias ls=lsd
fi

# zmv (docs: http://zsh.sourceforge.net/Doc/Release/User-Contributions.html#index-zmv)
#-------------------------------------------------------------------------------
autoload -U zmv
alias zcp='zmv -C'
alias zln='zmv -L'

if is-at-least 4.2.0; then
  # open browser on urls
  if [[ -n "$BROWSER" ]]; then
    _browser_fts=(htm html de org net com at cx nl se dk)
    for ft in $_browser_fts; do alias -s $ft=$BROWSER; done
  fi

  _editor_fts=(cpp cxx cc c hh h inl asc txt TXT tex toml yaml yml)
  for ft in $_editor_fts; do alias -s $ft=$EDITOR; done

  if [[ -n "$XIVIEWER" ]]; then
    _image_fts=(jpg jpeg png gif mng tiff tif xpm)
    for ft in $_image_fts; do alias -s $ft=$XIVIEWER; done
  fi

  _media_fts=(ape avi flv m4a mkv mov mp3 mpeg mpg ogg ogm rm wav webm)
  for ft in $_media_fts; do alias -s $ft=mplayer; done

  # read documents
  alias -s pdf=acroread
  alias -s ps=gv
  alias -s dvi=xdvi
  alias -s chm=xchm
  alias -s djvu=djview
  alias -s json=jq
  alias -s md=bat
  alias -s org=emacs

  # list whats inside packed file
  alias -s zip="unzip -l"
  alias -s rar="unrar l"
  alias -s tar="tar tf"
  alias -s tar.gz="echo "
  alias -s ace="unace l"
fi

if (( ! $+commands[open] )) && (( $+commands[xdg-open] )); then
	alias open='nohup xdg-open'
fi

################################################################################
# tools
################################################################################

if [[ -z "$SSH_CLIENT""$SSH_TTY""$SSH_CONNECTION" ]]; then
  if (( $+commands[nvim] )); then
    alias vim=nvim
  fi
fi


alias asdf-plugin='asdf plugin list all | fzf -m | xargs asdf plugin add' # TODO exclude plugins currently installed plugins from list

alias gopen='git config --get remote.origin.url | sed -r -e '"'"'s|^git@([^:]+):|https://\1/|'"'"' -e '"'"'s|.git$||'"'"' | xargs open'
alias glr='git pull --rebase'
alias gp='git push -u'
alias glrp='glr && gp'
alias gd='git diff --color'
alias gdc='gd --cached'
alias gs='git status -sb'
alias gw="git show"
# alias gsp="git stash pop"
alias gsw="git stash show -p"
alias gcob="git checkout -b"

(( $+commands[direnv] )) && alias tmux='direnv exec / tmux'

alias drun="docker run --rm -it"

# alias bzb="bazel build"
# alias bzt="bazel test"
# alias bzr="bazel run"
# alias bzq="bazel query"
# alias bzba="bazel build //..."
# alias bzta="bazel test //..."
# alias bfmt="buildifier -lint=warn -r ."

(( ! $+commands[typora] )) && alias typora="open -a typora"

alias 1ps:do-api-token='1ps get item f6mb6bqqjzf5jhrm4hds34uqlu --fields password'

################################################################################
# locals
################################################################################

if [ -f ~/.aliases.local ]; then
  source ~/.aliases.local
fi
