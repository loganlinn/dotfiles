#!/bin/false
# vim: set ft=zsh ts=2 sw=2 sts=2 et ai

alias dotfiles-up='git -C ~/.dotfiles pull && rcup -v'

# edit + reload this file shellcheck
alias aliases="${=EDITOR} $(echo $0:A) && src || source $(echo $0:A)"
alias zshrc="${=EDITOR} ~/.zshrc && zsh --noexec ~/.zshrc && source ~/.zshrc"

# show me the path
alias path='echo $PATH | tr -s ":" "\n"'
alias fpath='echo $FPATH | tr -s ":" "\n"'
alias wa='which -a'
alias wich=which

# allow aliases to be used with sudo
alias sudo='sudo ' 

################################################################################
# filesystem
################################################################################

alias l='ls -AFhl'
alias dud='du -d 1 -h'
alias duf='du -sh *'

if (( $+commands[lsd] )); then
  alias ls=lsd
fi

# zmv (docs: http://zsh.sourceforge.net/Doc/Release/User-Contributions.html#index-zmv)
#-------------------------------------------------------------------------------
if autoload -U zmv; then
  alias zcp='zmv -C'
  alias zln='zmv -L'
fi

# Suffix Aliases
if autoload -Uz is-at-least 2>/dev/null && is-at-least 4.2.0; then
  alias -s config=bat
  alias -s json=jq
  alias -s md=glow
  alias -s org=emacs
  alias -s plist="plutil -p"
  alias -s properties=bat
  alias -s toml=bat
  alias -s txt=bat
  alias -s yaml=bat
  alias -s yml=bat

  # media viewied with (xdg-)open
  alias -s (app dmg gif htm html jpg jpeg png gif mng pdf tiff tif ttf xls xlsx xpm)=open

  # archives
  alias -s zip="unzip -l"
  alias -s rar="unrar l"
  alias -s tar="tar tf"
  alias -s tar.gz="echo "
  alias -s ace="unace l"

  if (( $+command[mplayer] )); then
    for ft in ape avi flv m4a mkv mov mp3 mpeg mpg ogg ogm rm wav webm; do
      alias -s $ft=mplayer
    done
  fi
fi

################################################################################
# nix
################################################################################

alias nixre="darwin-rebuild switch"
alias nixgc="nix-collect-garbage -d"
alias nixq="nix-env -qaP"

################################################################################
# tools
################################################################################

# open (yeah, yeah, its not an alias)
if ! (( $+commands[open] )) && (( $+commands[xdg-open] )); then
  function open () {
    nohup xdg-open "$*" 2>&1 >/dev/null 
  }
fi

# pbcopy + pbpaste for non-darwins
if ! (( $+commands[pbcopy] )) && (( $+commands[xclip] )); then
	# NOTE: these require X11 session (forwarding)
  alias pbcopy='xclip -selection clipboard'
  alias pbpaste='xclip -selection clipboard -o'
fi

_remote_pbcopy() {
	local begin end args=()
	if [[ $OSTYPE != darwin* ]]; then
		# The base64 must be a single line.
		args+=(--wrap=0)
	fi
	# OSC 52 operates the clipboard, c is for copy.
	begin='\e]52;c;'
	end='\a'
	if [[ -n $TMUX ]]; then
		# Inside tmux, we must escape the construct.
		begin="\ePtmux;\e${begin}"
		end="${end}\e\\"
	fi
	print -n $begin
	base64 $args /dev/stdin
	print -n $end
}

# open git origin in browser
alias gopen='git config --get remote.origin.url | sed -r -e '"'"'s|^git@([^:]+):|https://\1/|'"'"' -e '"'"'s|.git$||'"'"' | xargs open'

## git
alias glr='git pull --rebase'
alias gp='git push -u'
alias glrp='glr && gp'
alias gd='git diff --color'
alias gdc='gd --cached'
alias gs='git status -sb'
alias gw="git show"
alias gsw="git stash show -p"
alias gcob="git checkout -b"
alias gcop="git checkout -p"
(( $+commands[gh] )) && alias gist="gh gist"

(( $+commands[direnv] )) && alias tmux='direnv exec / tmux'

alias drun="docker run --rm -it"

