[global]

### DISPLAY ###

monitor = 0
follow = keyboard

### GEOMETRY ###

width  = (300, 500)
height = 300
origin = top-right
offset = 30x50
scale  = 0
notification_limit = 0
corner_radius = 0
# notification_height = 0

### UI ###

frame_width = 1
transparency = 0
separator_height = 5
separator_color = auto
padding = 10
horizontal_padding = 10
text_icon_padding = 0

min_icon_size = 0
max_icon_size = 18
icon_position = left
icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

progress_bar = true
progress_bar_height = 16
progress_bar_frame_width = 1
progress_bar_min_width = 300
progress_bar_max_width = 500

### COLORS ###

foreground  = "#ECEFF4" # nord6
background  = "#5E81AC" # nord10
frame_color = "#3B4252" # nord1

### TEXT ###

#font = JetBrains Mono Medium 10
#font = Source Code Pro Medium 13
font = San Francisco Display Regular 11
line_height = 0
markup = full

# The format of the message.  Possible variables are:
#   %a  appname
#   %s  summary
#   %b  body
#   %i  iconname (including its path)
#   %I  iconname (without its path)
#   %p  progress value if set ([  0%] to [100%]) or nothing
#   %n  progress value if set without any extra characters
#   %%  Literal %
# Markup is allowed
format = "<b>%s</b>\n%b"
#format = "<b>%s</b>\n<small>%a</small>\n%b"
#format = "<b>%s</b>\n<span size='smaller'>%a</span>\n%b"
#format = "<b>%s</b>\n%b\n<span size="x-small">%a</span>"
#format = "<small>%a</small>: <big><b>%s</b></big>\n<small>%b</small>"

alignment          = left
vertical_alignment = center
word_wrap          = yes
ellipsize          = middle
ignore_newline     = no

### BEHAVIOR ###

indicate_hidden = yes
shrink = no
sort = yes
idle_threshold = 120
show_age_threshold = 60

stack_duplicates = true
hide_duplicate_count = false
show_indicators = yes

ignore_dbusclose = false
always_run_script = true

### ACTIONS ###

mouse_left_click   = do_action, close_current
mouse_middle_click = close_current
mouse_right_click  = context

### HISTORY ###

sticky_history = yes
history_length = 50

### MISC/ADVANCED ###

title = Dunst
class = Dunst

dmenu   = /usr/bin/rofi -dmenu -p dunst:
browser = /usr/bin/xdg-open

# Always run rule-defined scripts, even if the notification is suppressed
always_run_script = true

# verbosity ~= /crit|warn|mesg|info|debug/
verbosity = mesg

### WAYLAND ###

force_xwayland = false

### LEGACY ###

force_xinerama = false

[experimental]
per_monitor_dpi = false

################################################################################

[shortcuts]

# Shortcuts are specified as [modifier+][modifier+]...key
# Available modifiers are "ctrl", "mod1" (the alt-key), "mod2",
# "mod3" and "mod4" (windows-key).
# Xev might be helpful to find names for keys.

# Close notification.
close = mod4+F9

# Close all notifications.
# close_all = ctrl+shift+space
close_all = mod4+shift+F9

# Redisplay last message(s).
# On the US keyboard layout "grave" is normally above TAB and left
# of "1". Make sure this key actually exists on your keyboard layout,
# e.g. check output of 'xmodmap -pke'
# history = ctrl+grave
history = mod4+F10

# Context menu.
context = mod4+F11

