[slack_cicd_fail]
appname    = Slack
summary    = "*in #cicd-feed*"
body       = "*fail*"
foreground = "#3B4252" # nord1
#background = "#BF616A" # nord11
background = "#D08770" # nord12
timeout    = 120

[slack_cicd_success]
appname    = Slack
summary    = "*in #cicd-feed*"
body       = "Run *succeed*"
foreground = "#3B4252" # nord1
background = "#A3BE8C" # nord14
#background = "#8FBCBB" # nord7
timeout    = 30

[slack_cicd_running]
appname    = Slack
summary    = "*in #cicd-feed*"
body       = "*running*"
foreground = "#ECEFF4" # nord6
background = "#4C566A" # nord3
timeout    = 4

[slack_cicd_skiped]
appname    = Slack
summary    = "*in #cicd-feed*"
