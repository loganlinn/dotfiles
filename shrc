#!/bin/sh

#shellcheck source=/dev/null
[ -n "$ENV" ] || . "$HOME/.profile" >/dev/null

alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

alias lsa='ls -lah'
alias l='ls -lah'
alias ll='ls -lh'
alias la='ls -lAh'

alias cp='cp -i'
alias mv='mv -i'
alias md='mkdir -p'
alias j='jobs'
alias gs='git status'

# source parts
if [ -d "$0".d ]; then
  for _p in "$0".d/*; do
    if [ -f "$_p" ]; then
      if ! . "$_p"; then
        printf "%s: source '%s' error: non-zero return status\n" "$0" "$_p" >&2
      else
        printf "%s: '%s' sourced\n" "$0" "$_p" >&2
      fi
    fi
  done
fi

#shellcheck source=/dev/null
[ ! -r "$HOME/.shrc.local" ] || . "$HOME/.shrc.local"

