# -*- mode: sh -*-

COPY_ALWAYS="config/git/template/HEAD ssh/id_* local/share/fonts/* local/bin/bin"

EXCLUDES="README* LICENSE THANKS Makefile moredots.gif installers/* *~"

SYMLINK_DIRS="zsh zgenom node_modules"

# i.e. tag-darwin, tag-linux
TAGS="$(uname -s | tr '[:upper:]' '[:lower:]')"

# i.e. tag-pop, tag-ubuntu, tag-debian
if [ -f /etc/os-release ]; then TAGS="$TAGS $(. /etc/os-release; echo $ID $ID_LIKE)"; fi

# i.e. tag-x11
TAGS="$TAGS $XDG_SESSION_TYPE"

UNDOTTED="bin src Library raycast flake.nix"
