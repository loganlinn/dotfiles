COPY_ALWAYS="git_template/HEAD ssh/id_* local/share/fonts/* local/bin/bin"

EXCLUDES="README* LICENSE THANKS install.sh .envrc"

SYMLINK_DIRS="zsh emacs.d vim raycast"

TAGS=$(uname -s | tr '[:upper:]' '[:lower:]')
if [ -f /etc/os-release ]; then
  TAGS="$TAGS $(. /etc/os-release; echo $ID $ID_LIKE)"
fi

UNDOTTED="bin org raycast Library Makefile"
