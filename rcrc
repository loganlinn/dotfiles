COPY_ALWAYS="git_template/HEAD ssh/id_* local/share/fonts/* local/bin/bin"

EXCLUDES="README* LICENSE THANKS Makefile installers/* *~"

SYMLINK_DIRS="zsh config/regolith/i3xrocks"

# i.e. tag-darwin, tag-linux
TAGS="$(uname -s | tr '[:upper:]' '[:lower:]')"

# i.e. tag-pop, tag-ubuntu, tag-debian
if [ -f /etc/os-release ]; then TAGS="$TAGS $(. /etc/os-release; echo $ID $ID_LIKE)"; fi

# i.e. tag-x11
TAGS="$TAGS $XDG_SESSION_TYPE"

UNDOTTED="bin raycast Library Makefile"
